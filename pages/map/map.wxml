<!--pages/map/map.wxml-->
<view class="page-body">
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location
    ></map>
  </view>
  <view class="btn-area">
    <button bindtap="includePoints" class="page-body-button" type="primary">显示师傅位置</button>
    <button bindtap="moveToLocation" class="page-body-button" type="primary">显示我的位置</button>
  </view>
</view>

